//! RustS+ Comprehensive Test Suite
//! Tests all major features

//=============================================================================
// 1. PURE FUNCTIONS (No effects)
//=============================================================================

fn add(a i32, b i32) i32 {
    a + b
}

fn factorial(n i32) i32 {
    if n <= 1 {
        1
    } else {
        n * factorial(n - 1)
    }
}

//=============================================================================
// 2. I/O EFFECTS
//=============================================================================

fn say_hello(name String) effects(io) {
    println!("Hello, {}!", name)
}

fn show_num(n i32) effects(io) {
    println!("Number: {}", n)
}

//=============================================================================
// 3. STRUCTS
//=============================================================================

struct Counter {
    value i32,
    name String,
}

fn new_counter(name String) Counter {
    Counter { value: 0, name: name }
}

fn print_counter(ctr Counter) effects(io) {
    println!("{}: {}", ctr.name, ctr.value)
}

//=============================================================================
// 4. MUTATION WITH mut
//=============================================================================

fn count_up() i32 {
    mut cnt = 0
    cnt = cnt + 1
    cnt = cnt + 1
    cnt = cnt + 1
    cnt
}

fn sum_to_n(n i32) i32 {
    mut total = 0
    mut idx = 0
    while idx <= n {
        total = total + idx
        idx = idx + 1
    }
    total
}

//=============================================================================
// 5. OUTER KEYWORD
//=============================================================================

fn test_outer_mutation() i32 {
    mut result = 0
    {
        outer result = 42
    }
    result
}

fn nested_outer() i32 {
    mut val = 0
    {
        {
            outer val = 100
        }
    }
    val
}

//=============================================================================
// 6. IF EXPRESSION COMPLETENESS
//=============================================================================

fn max_val(a i32, b i32) i32 {
    if a > b {
        a
    } else {
        b
    }
}

fn sign_of(n i32) i32 {
    if n < 0 {
        -1
    } else if n > 0 {
        1
    } else {
        0
    }
}

fn abs_val(n i32) i32 {
    if n < 0 {
        -n
    } else {
        n
    }
}

//=============================================================================
// 7. COMBINED EFFECTS
//=============================================================================

fn greet_and_count(name String) effects(io) i32 {
    println!("Hello, {}!", name)
    42
}

//=============================================================================
// MAIN - Run all tests
//=============================================================================

fn main() {
    println!("=== RustS+ Test Suite ===")
    
    // 1. Pure functions
    println!("\n--- Pure Functions ---")
    sum = add(10, 20)
    println!("add(10, 20) = {}", sum)
    
    fact = factorial(5)
    println!("factorial(5) = {}", fact)
    
    // 2. I/O effects
    println!("\n--- I/O Effects ---")
    say_hello(String::from("RustS+"))
    show_num(123)
    
    // 3. Structs
    println!("\n--- Structs ---")
    ctr = new_counter(String::from("MyCounter"))
    print_counter(ctr)
    
    // 4. Mutation
    println!("\n--- Mutation with mut ---")
    cnt_result = count_up()
    println!("count_up() = {}", cnt_result)
    
    sum_result = sum_to_n(10)
    println!("sum_to_n(10) = {}", sum_result)
    
    // 5. Outer keyword
    println!("\n--- Outer Keyword ---")
    outer_result = test_outer_mutation()
    println!("test_outer_mutation() = {}", outer_result)
    
    nested_result = nested_outer()
    println!("nested_outer() = {}", nested_result)
    
    // 6. If expressions
    println!("\n--- If Expression Completeness ---")
    max_result = max_val(15, 10)
    println!("max_val(15, 10) = {}", max_result)
    
    sign_neg = sign_of(-5)
    sign_pos = sign_of(5)
    sign_zero = sign_of(0)
    println!("sign_of(-5) = {}", sign_neg)
    println!("sign_of(5) = {}", sign_pos)
    println!("sign_of(0) = {}", sign_zero)
    
    abs_result = abs_val(-42)
    println!("abs_val(-42) = {}", abs_result)
    
    // 7. Combined effects
    println!("\n--- Combined Effects ---")
    greet_result = greet_and_count(String::from("World"))
    println!("greet_and_count returned: {}", greet_result)
    
    println!("\n=== All Tests Completed! ===")
}