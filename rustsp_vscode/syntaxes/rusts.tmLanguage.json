{
  "scopeName": "source.rustsplus",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#effectsClause" },
    { "include": "#matchArm" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rustsplus",
          "match": "//.*$"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rustsplus",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rustsplus",
              "match": "\\\\."
            }
          ]
        }
      ]
    },

    "effectsClause": {
      "patterns": [
        {
          "name": "meta.effects.rustsplus",
          "begin": "\\beffects\\s*\\(",
          "beginCaptures": {
            "0": { "name": "keyword.modifier.rustsplus" }
          },
          "end": "\\)",
          "patterns": [
            {
              "name": "support.type.effect.rustsplus",
              "match": "\\b(io|alloc|panic|read|write)\\b"
            },
            {
              "name": "variable.parameter.effect.rustsplus",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "punctuation.separator.rustsplus",
              "match": ","
            }
          ]
        }
      ]
    },

    "matchArm": {
      "patterns": [
        {
          "name": "meta.match.arm.rustsplus",
          "begin": "\\b[A-Z][A-Za-z0-9_:]*\\s*\\{",
          "beginCaptures": {
            "0": { "name": "entity.name.match.arm.rustsplus" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#numbers" }
          ]
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rustsplus",
          "match": "\\b(fn|struct|enum|match|if|else|while|for|return)\\b"
        },
        {
          "name": "keyword.modifier.rustsplus",
          "match": "\\b(mut|outer|effects)\\b"
        },
        {
          "name": "constant.language.rustsplus",
          "match": "\\b(true|false)\\b"
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "name": "storage.type.rustsplus",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|bool|String)\\b"
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.rustsplus",
          "match": "\\b\\d+\\b"
        }
      ]
    }
  }
}
